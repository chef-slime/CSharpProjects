using System;

namespace CSharpCompiler
{
    class Program
    {
        public static void Main(string[] args)
        {
            Console.WriteLine("Shall we begin? ");
            string user = Console.ReadLine().ToUpper();

            while (user == "YES")
            {
                Random randomNumber = new Random();

                int winNum = randomNumber.Next(0, 100);

                Console.WriteLine("Guess a number: ");
                int input = int.Parse(Console.ReadLine());

                if (input == winNum)
                {
                    Console.WriteLine("You Win! \n Play Again? ");
                    user = Console.ReadLine();
                }

                else
                {
                    Console.WriteLine($"Sorry, the correct number was {winNum}. \nPlay Again? ");
                    user = Console.ReadLine();
                }
            }
        }
    }
}
